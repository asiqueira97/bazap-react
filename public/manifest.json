{
    "manifest_version": 3,
    "name": "Bazap 2.0",
    "description": "Gerenciamento de brech√≥ online pelo WhatsApp.",
    "version": "2.0.0",  
    "permissions": ["tabs"],
    "content_scripts": [{
      "matches": ["*://*.web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }],
    "web_accessible_resources": [
      {
        "resources": [ "logo.png", "loading.gif"],
        "matches": ["*://*.web.whatsapp.com/*"]
      }
    ],  
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "action": {
      "default_icon": "./logo.png",
      "default_popup": "popup.html"
    },
    "host_permissions": ["https://brechoale.com.br/*"]
  }